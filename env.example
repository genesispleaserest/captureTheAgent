#######################################
# Referee API (services/referee)
#######################################

# SQLite DB path (mounted/persistent in production)
ARENA_DB_PATH=arena.db

# Comma-separated list of allowed origins in production.
# Example: https://arena.example.com,https://web.example.com
ARENA_ALLOWED_ORIGINS=http://localhost:3000

# Max JSON payload size for API requests (e.g., 1mb, 5mb)
ARENA_JSON_LIMIT=1mb

# Basic rate limiting (global, in-memory)
ARENA_RATE_LIMIT_WINDOW_MS=60000
ARENA_RATE_LIMIT_MAX=120

# Route-specific limits (stricter)
ARENA_RATE_LIMIT_CLAIMS_WINDOW_MS=60000
ARENA_RATE_LIMIT_CLAIMS_MAX=30
ARENA_RATE_LIMIT_SESSIONS_WINDOW_MS=60000
ARENA_RATE_LIMIT_SESSIONS_MAX=20

# When behind a reverse proxy (e.g., Nginx), set to 1
TRUST_PROXY=0

#######################################
# Web UI (services/web)
#######################################

# URL for the Referee API the web app calls
NEXT_PUBLIC_REFEREE_URL=http://localhost:8080

# Optional: Email delivery for magic links
SMTP_HOST=localhost
SMTP_PORT=2525
# SMTP_USER=your_user
# SMTP_PASS=your_password
SMTP_FROM=arena@example.com

# Session cookies
ARENA_SESSION_SECRET=dev-secret-change-me

# Rate limits (optional overrides)
# ARENA_RATE_LIMIT_SIGNUP_WINDOW_MS=60000
# ARENA_RATE_LIMIT_SIGNUP_MAX=5

#######################################
# Optional Observability
#######################################

# Sentry DSN for the web/app (if used)
SENTRY_DSN=

